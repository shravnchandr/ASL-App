# ASL Dictionary - Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API Key (REQUIRED)
GOOGLE_API_KEY=your_google_api_key_here

# Environment (development or production)
ENVIRONMENT=development

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Rate Limiting (requests per minute)
RATE_LIMIT=10/minute

# Frontend API URL (leave empty for same-origin in production)
VITE_API_URL=

# Database URL (default: SQLite)
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./asl_feedback.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Origins (comma-separated, add your production domain)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
