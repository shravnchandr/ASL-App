# ASL Dictionary - Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API Key (REQUIRED)
GOOGLE_API_KEY=your_google_api_key_here

# Environment (development or production)
ENVIRONMENT=development

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Rate Limiting (requests per minute)
RATE_LIMIT=10/minute

# Frontend API URL (leave empty for same-origin in production)
VITE_API_URL=

# Database URL (default: SQLite)
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname
# For production, use PostgreSQL for better performance and scalability
DATABASE_URL=sqlite+aiosqlite:///./asl_feedback.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Origins (comma-separated, add your production domain)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Admin Access
# Set a strong password for admin panel access
ADMIN_PASSWORD=change_this_to_a_secure_password

# Redis Cache (optional, improves performance)
# Leave empty to disable caching - app will work fine without it
# Local: redis://localhost:6379/0
# Render: redis://red-xxxxx:6379 (copy from Render Redis dashboard)
REDIS_URL=
# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600
